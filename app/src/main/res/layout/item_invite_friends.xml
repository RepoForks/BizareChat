<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >


    <TextView
        android:id="@+id/friend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="14dp"
        android:text="@string/friend_name"
        android:textColor="@color/chats_item_last_message"
        android:layout_below="@+id/friend_email"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/friend_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/friend_email"
        android:textColor="@color/chats_item_last_message"
        android:layout_marginTop="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/friend_name" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="12dp"
        android:id="@+id/friend_pic"
        android:layout_width="@dimen/sing_up_avatar_size"
        android:layout_height="@dimen/sing_up_avatar_size"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:src="@drawable/userpic" />

    <CheckBox

        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/check_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="19dp"
        android:layout_alignTop="@+id/friend_email"
        android:layout_alignParentEnd="true"
        android:checked="false" />
</RelativeLayout>