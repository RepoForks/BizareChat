<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="SignText">
        <item name="android:fontFamily">Roboto-Regular</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="EmailPasswordText">
        <item name="android:fontFamily">Roboto-Regular</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="SignUpButton">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#165258</item>

    </style>

    <style name="SignInButton">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#165258</item>

    </style>

    <style name="ForgotPassword">
        <item name="android:fontFamily">Roboto-Regular</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14dp</item>
        <item name="android:background">#327780</item>
    </style>

    <style name="RegisterInfo">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">Roboto-Regular</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="EmailTextInput">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#8fb4b9</item>

    </style>

    <style name="InvalidInfo">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#EE6767</item>
    </style>

</resources>
